@model IEnumerable<EMS.Models.Employee>

@{
	ViewBag.Title = "Employee Detail list";
}


<div class="card-deck">

	@foreach (var employee in Model) {
		<div class="card m-3">
			<div class="card-header">
				<h3>@employee.Name</h3>
			</div>
			<img src="~/wwwroot/images/random.jpg" asp-append-version="true"/>
			<div class="card-footer text-center">
				<a asp-controller="home" asp-action="details" asp-route-id=@employee.Id >View</a>
				<a asp-controller="home" asp-action="edit" asp-route-id=@employee.Id class="btn btn-primary">Edit</a>
				<a href="#" class="btn btn-primary">Delete</a>
			</div>
		</div>
	}

</div>



