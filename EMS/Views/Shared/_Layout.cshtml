@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager;

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link href="~/wwwroot/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>

	<nav>
		<ul>

			<a asp-controller="home" asp-action="index">home</a>
			<a asp-controller="home" asp-action="Create">create</a>
			@{ if (signInManager.IsSignedIn(User))
				{
					<a asp-controller="account" asp-action="register">logout</a>
					<p>@User.Identity.Name</p>
				}
				else
				{

					<a asp-controller="account" asp-action="register">login</a>
					<a asp-controller="account" asp-action="register">register</a>
				}

			}
		</ul>
	</nav>

	<div class="container ">
		@RenderBody()
	</div>
</body>
</html>
